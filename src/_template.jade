block vars
  - var mailText = "pst_spb2016@mail.ru";
  - var phoneNumber01 = "+7 (812) 242-87-33";
  - var phoneLink01 = "+8122428733";

doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    block title

    block headLinks
      link(rel='icon', type='image/x-icon', href='img/favicon.ico')

    block headStyles
      link(href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800', rel='stylesheet')
      link(href='http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css', rel='stylesheet')
      link(rel='stylesheet', href='css/styles.min.css')

  body.page-wrapper
    .container
      header.header.hidden-xs
        .header-top
          .header-logo
            a(href='/' title='Главная')
              img.img-responsive.header-logo-img(src='img/logo-pst.png', alt='Логотип ПСТ')
          .header-logo-name ПСТ
        .header-text
          p
          | Товары для строительства и ремонта
        .contacts
          ul.list-unstyled
            li.contacts-list
              a.contacts-link(href='tel:' + phoneLink01)
                i.fa.fa-phone
                |  #{phoneNumber01}
            li.contacts-list
              a.contacts-link(href='mailto:' + mailText)
                i.fa.fa-envelope
                |  #{mailText}

    nav.navbar.navbar-default.nav-custom
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#nav-header-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.visible-xs.navbar-brand.brand-custom(href='index.html') ПСТ
        #nav-header-collapse.navbar-collapse.collapse
          ul.nav-custom-list.nav.navbar-nav
            li
              a.nav-custom-link(href='/') Главная
            li
              a.nav-custom-link(href='catalog.html') Каталог
            li
              a.nav-custom-link(href='services.html') Услуги
            li
              a.nav-custom-link(href='details.html') Реквизиты
            li
              a.nav-custom-link(href='contacts.html') Контакты

    section.content
      .container
        block content

    footer.footer-wrapper
      .container
        .row
          .footer-section.clearfix
            .col-md-3.col-xs-12
              .footer-item-logo
                a(class="footer-logo" href='/' title='Главная')
                  img.img-responsive(src='img/logo-pst.png', alt='Логотип')
                .footer-name ПСТ
            .col-md-6.col-xs-12
              .footer-copyright.text-center Copyright © 2016 "ПСТ" (Санкт-Петербург)
            .col-md-3.col-xs-12
              .footer-contacts
                span.contacts-info
                  a.contacts-link-f(href='tel:' + phoneLink01)
                    i.fa.fa-phone
                    |   #{phoneNumber01}
                span.contacts-info
                  a.contacts-link-f(href='mailto:' + mailText)
                    i.fa.fa-envelope
                    |  #{mailText}

    block script
      script(src='http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
      script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
